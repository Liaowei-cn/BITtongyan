/**ticket.wxss**/

.prompt{
  font-size: 30rpx;
  color: #999;
  padding: 20rpx 0 20rpx 0;
}
.ticket{
  width: 500rpx;
  padding: 40rpx 50rpx 40rpx 50rpx;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
}
.title{
  font-size: 40rpx;
  font-weight: 700;
  padding: 0 0 20rpx 0;
  border-bottom: solid 1px #ebebeb;
  color: #000;
}
.info{
  font-size: 30rpx;
  padding: 10rpx 0 10rpx 0;
  color: #444;
}
.qrcode{
  border-top: solid 1px #ebebeb;
  display: flex;
  justify-content:center;
  align-items: center;
  padding: 20rpx 0 10rpx 0;
}
.qrcode image{
  width: 300rpx;
  height: 300rpx;
}
.notice{
  color: #aaa;
  font-size: 26rpx;
}
.bottom {
    display: flex;
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    overflow: hidden;
    border-top: solid 1px #ccc;
}
.bottom .quit{
  flex: 7;
  font-size: 38rpx;
  color: #fff;
  padding: 15rpx 50rpx 15rpx 50rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  border-radius: 0;
}
.bottom .back {
  flex: 3;
  display: flex;
  border-radius: 0;
  background: #fff;
  color: #000;
  font-size: 26rpx;
  justify-content:center;
  align-items: center;
}
.bottom .back image {
  display: flex;
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 0 20rpx;
}
.save{
  width: 500rpx;
  font-size: 38rpx;
  color: #fff;
  margin: 30rpx 0 0rpx 0;
  padding: 15rpx 50rpx 15rpx 50rpx;
  text-align: center;
  border-radius:20px;
  background: rgb(255,153,51);
}
button::after {
  border: 0;
}
