/** usercenter.wxss **/
.user {
  width: 725rpx;
  background: #ffffff;
  padding: 30rpx 25rpx 30rpx 0;
  margin: 30rpx 0 0 0;
}
.user .userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}
.user .user-info{
  flex: 5;
  text-align: left;
}
.user .user-info text{
  display: block;
}
.user .user-info .userinfo-nickname{
  padding: 8rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #818A8F;
}
.user .user-info .edit{
  font-size: 30rpx;
  color: #bababa;
  line-height: 34rpx;
}

.my{
  margin: 30rpx 0 0 0;
  background: #ffffff;
}
.my-item{
  width: 750rpx;
  height: 100rpx;
  background: #ffffff;
  padding: 0;
}
.my-item .myitem-icon{
  flex: 1;
}
.my-item .myitem-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 27.5rpx 0;
}
.my-item .myitem-name{
  flex: 5;
  text-align: left;
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 20rpx 0;
}
.modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.3);
  overflow: hidden;
}
.modal .showPage {
  width: 400rpx;
  overflow: hidden;
  position: fixed;
  top: 25%;
  left: 50%;
  margin: 0 0 0 -200rpx;
  text-align: center;
}
.modal .showPage .poster .posterPic {
  width: 300rpx;
  height: 400rpx;
  border-radius: 40rpx;
}
.modal .showPage .close {
  padding: 20px 20rpx 20px 20rpx;
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
}
.copyright{
  margin: 40rpx 0 0 0;
  text-align: center;
  font-size: 26rpx;
  color: #bbb;
}