button{
  display: flex;
  justify-content:center;
  align-items: center;
  width: 100%;
  background: #fff;
  font-size: 38rpx; 
}
button::after {
  border: 0;
}
page{
  background-color: #fff;
}
.input{
  padding: 60rpx 150rpx 0rpx 150rpx;
}
.userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.input-item{
  display: flex;
  border-bottom: solid 1px #ebebeb;
  padding: 0 50rpx 0 50rpx;
}
.input-info{
  flex: 3;
  color: #666;
  font-size:16px;
  line-height: 40px;
} 
.input-text{
  flex: 7;
  padding: 10rpx;
  display: flex;
  align-items: center;
  font-size: 16px;
}
.notice{
  padding: 30rpx 0 20rpx 0;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  border-bottom: solid 1px #ebebeb;
}
.button1 {
  border-radius: 0;
  border-top: solid 1px #ebebeb;
  width: 50%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  font-size: 36rpx;
  color: #999;
}
.button2 {
  border-radius: 0;
