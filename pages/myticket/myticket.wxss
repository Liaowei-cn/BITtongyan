/**myjoin.wxss**/
.container{
  padding: 30rpx 40rpx 0rpx 40rpx;  
}
.ticketview{
  display: flex;  
  flex-direction: row; 
  background: #fff;
  width: 630rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin: 0 0 10rpx 0;
}
.state{
  flex: 2;
  background: #999;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  writing-mode: vertical-lr;
  border-radius: 10rpx 0 0 10rpx;
}
.info{
  flex: 20;
  padding: 5rpx 20rpx 5rpx 20rpx;  
}
.info .title{
  font-size: 30rpx;
  color: #000;
  word-break:break-all;  
  display:-webkit-box;  
  -webkit-line-clamp:2;  
  -webkit-box-orient:vertical;  
  overflow:hidden; 
}
.info .timeplace{
  font-size: 20rpx;
  color: #999;
}